rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read only their own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Users can create their own profile during registration
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Users can update their own profile
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Admin can read all users
      allow read: if isAdmin();
    }
    
    // Events/Workshops collection
    match /events/{eventId} {
      // Anyone authenticated can read events
      allow read: if request.auth != null;
      
      // Only admin can create events
      allow create: if isAdmin();
      
      // Only admin can update events (or system via transaction for seat counts)
      allow update: if request.auth != null;
      
      // Only admin can delete events
      allow delete: if isAdmin();
    }
    
    // Registrations collection
    match /registrations/{registrationId} {
      // Users can read their own registrations
      allow read: if request.auth != null && 
        (resource.data.user_id == request.auth.uid || isAdmin());
      
      // Users can create registrations for themselves
      allow create: if request.auth != null && 
        request.resource.data.user_id == request.auth.uid;
      
      // Allow updates for promoted_from_waitlist flag
      allow update: if isAdmin();
      
      // Users can delete their own registrations, admin can delete any
      allow delete: if request.auth != null && 
        (resource.data.user_id == request.auth.uid || isAdmin());
    }
    
    // Waitlist collection
    match /waitlist/{waitlistId} {
      // Users can read their own waitlist entries, admin can read all
      allow read: if request.auth != null && 
        (resource.data.user_id == request.auth.uid || isAdmin());
      
      // Users can add themselves to waitlist
      allow create: if request.auth != null && 
        request.resource.data.user_id == request.auth.uid;
      
      // Users can remove themselves from waitlist, admin can remove any
      allow delete: if request.auth != null && 
        (resource.data.user_id == request.auth.uid || isAdmin());
      
      // Allow updates for position changes
      allow update: if request.auth != null;
    }
  }
}
